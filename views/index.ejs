<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
  	<% include ./template/header.ejs %>
    <div class="container-fluid">
  		<div class="row">
  			<% include ./template/left.ejs %>
  			<div class="col-sm-9">
  				<div class="row micro-content">
  					<div class="col-sm-10">
  						<div class="row">
                <% var blogListByType = locals['blogTypeList']%>
                <% if (locals['blogTypeList']){%>
                  <% for (i in blogListByType){%>
                    <h4><a href=""><%=blogListByType[i].title %></a></h4>
                    <div class="col-sm-11">
                        <div class="blog-title">
                            <span><%=blogListByType[i].createtime %></span> 
                        </div>
                        <div class="text-content">
                              <%- blogListByType[i].content %>
                        </div>
                  <%}%>
                <% }else{%>
                      <div>
                        <%= title%>
                      </div>
                   </div>
                <% }%>
                    
  							
                <!-- <div>
                    标题
                </div> -->
  						</div>
              <!-- <form action="/uploadImage" enctype="multipart/form-data" method="post">
               <input type="file" name="upload"><br>
               <input type="submit" value="Upload">
              </form> -->
  					</div>
  				</div>
  			</div>
  		</div>
  	</div>
    <% include ./template/footer.ejs %>
    <script>
      $(function(){
        if($('.text-content').html().length > 2000){
          var str = $('.text-content').html().slice(0,1000) + '[详细]';
          console.log(str);
          $('.text-content').html(str);
        };
      })
    </script>
  </body>
</html>